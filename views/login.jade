doctype html
html(lang='en')
    head
        title Fourtify Admin Panel
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='cache-control', content='no-cache')
        meta(http-equiv='expires', content='Thu, 19 Nov 1900 08:52:00 GMT')
        // Loading bootstrap css
        link(type='text/css', href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800')
        link(type='text/css', rel='stylesheet', href='http://fonts.googleapis.com/css?family=Oswald:400,700,300')
        link(type='text/css', rel='stylesheet', href='vendors/jquery-ui-1.10.3.custom/css/ui-lightness/jquery-ui-1.10.3.custom.css')
        link(type='text/css', rel='stylesheet', href='vendors/font-awesome/css/font-awesome.min.css')
        link(type='text/css', rel='stylesheet', href='vendors/bootstrap/css/bootstrap.min.css')
        // Loading style vendors
        link(type='text/css', rel='stylesheet', href='vendors/animate.css/animate.css')
        link(type='text/css', rel='stylesheet', href='vendors/iCheck/skins/all.css')
        // Loading style
        link.default-style(type='text/css', rel='stylesheet', href='css/themes/style1/pink-blue.css')
        link#theme-change.style-change.color-change(type='text/css', rel='stylesheet', href='css/themes/style1/pink-blue.css')
        link(type='text/css', rel='stylesheet', href='css/style-responsive.css')
        link(rel='shortcut icon', href='images/favicon.ico')
    body#signin-page
        .page-form
            form.form(action='/dashboard', method="POST")
                .header-content
                    h1 Log In
                .body-content
                    .form-group
                        .input-icon.right
                            i.fa.fa-user
                            input.form-control(type='text', placeholder='Username', name='username')
                    .form-group
                        .input-icon.right
                            i.fa.fa-key
                            input.form-control(type='password', placeholder='Password', name='password')
                    .form-group.pull-left
                        .checkbox-list
                            label
                                input(type='checkbox')
                                |                     Keep me signed in
                    .form-group.pull-right
                        button.btn.btn-success(type='submit')
                            | Log In&nbsp;
                            i.fa.fa-chevron-circle-right
                    .clearfix
                    hr
        script(src='js/jquery-1.10.2.min.js')
        script(src='js/jquery-migrate-1.2.1.min.js')
        script(src='js/jquery-ui.js')
        // loading bootstrap js
        script(src='vendors/bootstrap/js/bootstrap.min.js')
        script(src='vendors/bootstrap-hover-dropdown/bootstrap-hover-dropdown.js')
        script(src='js/html5shiv.js')
        script(src='js/respond.min.js')
        script(src='vendors/iCheck/icheck.min.js')
        script(src='vendors/iCheck/custom.min.js')
        script.
            //BEGIN CHECKBOX & RADIO
            $('input[type="checkbox"]').iCheck({
                checkboxClass: 'icheckbox_minimal-grey',
                increaseArea: '20%' // optional
            });
            $('input[type="radio"]').iCheck({
                radioClass: 'iradio_minimal-grey',
                increaseArea: '20%' // optional
            });
            //END CHECKBOX & RADIO
